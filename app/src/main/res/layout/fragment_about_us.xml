<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6200EE"
    tools:context=".fragment.AboutUsFragment">

   <ImageView
       android:id="@+id/imgLogo"
       android:layout_width="170dp"
       android:layout_height="170dp"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
       android:src="@drawable/foodlogo"/>
    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:text="AboutApp:"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/txtAbout1"
        android:layout_width="wrap_content"
        android:layout_below="@id/txtAbout"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="We will deliver your food very fast and tasty food for you."
        android:textColor="#ffffff"
        android:padding="20dp"
        android:textSize="20sp"/>

</RelativeLayout>